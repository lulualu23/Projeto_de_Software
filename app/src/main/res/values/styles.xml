<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="brewck_input">
        <item name="android:layout_width">345dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/rounded_border</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/agrandir_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="brewck_smalltext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/agrandir_regular</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="brewck_boldtext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/agrandir_textbold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="brewck_button">
        <item name="android:layout_width">134dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:backgroundTint">#FF914D</item>
        <item name="android:fontFamily">@font/agrandir_textbold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="brewck_layoutbutton">
        <item name="android:layout_width">113dp</item>
        <item name="android:layout_height">106dp</item>
        <item name="android:background">@drawable/rectangle</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >8dp</item>
        <item name="android:textStyle" >bold</item>
    </style>
</resources>